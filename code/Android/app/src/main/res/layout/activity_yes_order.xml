<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shengchengdingdan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sowell.democlient.shengchengdingdan"
    android:background="@color/gray">



        <Button
            android:text="联系商家"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:onClick="CallPhone"
            android:background="@drawable/button1"
            android:layout_alignParentBottom="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LL1">
        <TextView
            android:text="订单人："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usename"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white" />

        <TextView
            android:text="手机号码："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usemobile"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="车牌号码："
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/carnum"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="故障地点："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/nowlocal"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="车型："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/usecar"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <TextView
            android:text="订单号："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/ordernum"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp" />
        <TextView
            android:text="订单时间："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/formtime"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeend"
            android:text="完成时间"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/businessname"
            android:text="商家名称"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/businessphone"
            android:text="商家电话"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="所需服务："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textColor="#000"
            android:padding="8dp"
            android:text="价        格："
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="留        言："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</RelativeLayout>
