<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shengchengdingdan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.sowell.democlient.shengchengdingdan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/LL1"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LL1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/usename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="订单人："
            android:textColor="#000" />

        <TextView
            android:id="@+id/usemobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="手机号码："
            android:textColor="#000" />

        <TextView
            android:text="车牌号码："
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/carnum"
            />

        <TextView
            android:text="故障地点："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/nowlocal"
            />

        <TextView
            android:text="车型："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/usecar"
            />
        <TextView
            android:text="订单号："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/ordernum"
            />
        <TextView
            android:text="订单时间："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/formtime"
            android:textColor="#000"
            android:padding="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeend"
            android:text="完成时间"
            android:textColor="#000"
            android:padding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/businessname"
            android:text="商家名称"
            android:textColor="#000"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/businessphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="商家电话"
            android:textColor="#000" />

        <TextView
            android:text="所需服务："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:textColor="#000"
            android:padding="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textColor="#000"
            android:padding="8dp"
            android:text="价        格："
            />

        <TextView
            android:text="留        言："
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/message"
            android:textColor="#000"
            android:padding="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/callphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系商家"
        android:background="#2196f3"
        android:textColor="#fff"
        android:onClick="CallPhone"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消订单"
        android:background="#2196f3"
        android:textColor="#fff"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />

    <Button
        android:id="@+id/cance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导航到商家"
        android:background="#2196f3"
        android:textColor="#fff"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
