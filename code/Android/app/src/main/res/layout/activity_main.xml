<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sowell.democlient.MainActivity"
   android:background="@color/white">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/tiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:id="@+id/et_poisearch"
        android:maxLines="1"
        android:hint="查找地点"
            android:background="@null"
            android:gravity="center"/>

    <Button
        android:id="@+id/btn_search"
        android:onClick="poiClick"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#0000"
        android:text="搜索" />

</LinearLayout>
    <!-- 百度MapView控件 -->
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_below="@+id/linearLayout1" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_1"
        android:background="@drawable/map"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/road"
        android:id="@+id/btn_lukuang"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btn_1"
        android:layout_alignLeft="@+id/btn_1"
        android:layout_alignStart="@+id/btn_1" />
    <ImageButton
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/service"
        android:layout_below="@+id/btn_lukuang"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_2"
        android:background="@drawable/locate"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
