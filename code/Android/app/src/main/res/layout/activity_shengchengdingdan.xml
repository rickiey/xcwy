<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shengchengdingdan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.sowell.democlient.shengchengdingdan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LL1">
        <TextView
            android:text="车牌号码："
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carnum"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"/>
        <TextView
            android:text="订单人："
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usename"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="手机号码："
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:id="@+id/usemobile"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="故障地点："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/nowlocal"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="车型："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/usecar"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="订单时间："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/formtime"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/businessname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="商家名称"
            android:textColor="#000"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/businessphone"
            android:text="商家电话"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="所需服务："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/type"
            android:padding="8dp"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:padding="8dp"
            android:text="价        格："
            android:textColor="#000"
            android:textSize="14sp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="留        言："
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/LL1"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp">
        <Button
            android:text="联系商家"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:textColor="#fff"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button1"
            android:onClick="CallPhone"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:text="确认"
            android:textColor="#fff" />

        <Button
            android:text="取消订单"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button15"
            android:onClick="quxiao"/>

    </LinearLayout>
</RelativeLayout>
