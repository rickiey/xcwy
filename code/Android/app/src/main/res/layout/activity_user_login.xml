<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/logo"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/user_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:gravity="center"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/ll_number"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:padding="10dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_userlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:text="登录"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/ll_password"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/user_regist"
        android:layout_alignStart="@+id/user_regist" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_regist"
        android:text="注册"
        android:background="#0000"
        android:textSize="20dp"
        android:textColor="#2196f3"
        android:padding="10dp"
        android:layout_below="@+id/btn_userlogin"
        android:layout_alignLeft="@+id/ll_password"
        android:layout_alignStart="@+id/ll_password" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_btn"
        android:text="忘记密码"
        android:textSize="20dp"
        android:background="#0000"
        android:textColor="#2196f3"
        android:padding="10dp"
        android:layout_alignRight="@+id/btn_userlogin"
        android:layout_alignEnd="@+id/btn_userlogin"
        android:layout_below="@+id/btn_userlogin" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是员工"
        android:background="#0000"
        android:padding="20dp"
        android:textColor="#2196f3"
        android:id="@+id/staff_btn"
        android:textSize="15dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/forget_btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
