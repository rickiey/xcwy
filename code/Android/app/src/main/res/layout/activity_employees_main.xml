<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employees_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.sowell.democlient.EmployeesMainActivity">
    <TextView
        android:id="@+id/tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你有新订单,请及时处理！"
        android:background="@color/colorPrimaryDark"
        android:onClick="neworder"
        android:textSize="20dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/look_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="待处理的订单"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        android:onClick="look_order"
        android:layout_below="@+id/tishi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--<Button-->
        <!--android:id="@+id/finished"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="已完成订单"-->
        <!--android:gravity="center"-->
        <!--android:layout_below="@+id/unfinish"-->
        <!--android:onClick="history"/>-->
    <Button
        android:id="@+id/alterpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/altername"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="修改密码"
        android:background="#fff"
        android:onClick="alterPassword"/>
    <Button
        android:id="@+id/altername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop ="5dp"
        android:gravity="center"
        android:text="修改姓名"
        android:background="#fff"
        android:onClick="alterName"
        android:layout_below="@+id/look_order"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="wrap_content"

        android:text="注销"
        android:gravity="center"
        android:layout_below="@+id/alterpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cancle" />

</RelativeLayout>
